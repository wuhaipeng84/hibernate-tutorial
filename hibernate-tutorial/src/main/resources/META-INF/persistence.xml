<?xml version="1.0" encoding="UTF-8"?>
<persistence>
	<persistence-unit name="tutorial" >
		<properties>
			<!-- HSQL Configuration
			 -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:mymemdb"/>
			<property name="hibernate.conenction.username" value="sa"/>
			<property name="hibernate.connection.password" value=""/>
			
			<!-- Oracle Configuration 
			<property name="hibenrate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver"/>
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
			<property name="hibernate.connection.username" value="osuser"/> 
			<property name="hibernate.connection.password" value="osuser"/> 
			-->
			<property name="hibernate.hbm2ddl" value="create"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
